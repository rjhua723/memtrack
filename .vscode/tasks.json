{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build makefile",
            "type": "shell",
            "command": "make",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "autodetect",
                    "${workspaceFolder}"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build makefile mingw",
            "type": "shell",
            "command": "make mingw c=gcc",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "autodetect",
                    "${workspaceFolder}"
                ]
            },
            "group": "build"
        }
    ]
}